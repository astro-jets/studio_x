<!-- Page Content -->
<div id="content-page" class="content-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-10">
        <div class="iq-card">
          <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
              <h4 class="card-title">Add New Artist</h4>
            </div>
          </div>
          <div class="iq-card-body">
            <form method="post" action="/admin/artists/new">
              <div class="form-group">
                <label for="fname">Artist Name</label>
                <input
                  class="filepond"
                  type="file"
                  name="avatar"
                  accept="image/*"
                />
              </div>
              <div class="form-group">
                <label for="fname">Artist Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="fname"
                  name="name"
                  placeholder="Artist name"
                />
              </div>
              <div class="form-group">
                <label for="furl">Facebook Url:</label>
                <input
                  type="text"
                  class="form-control"
                  id="furl"
                  name="fb"
                  placeholder="Facebook Url"
                />
              </div>
              <div class="form-group">
                <label for="turl">Twitter Url:</label>
                <input
                  type="text"
                  class="form-control"
                  id="turl"
                  name="tw"
                  placeholder="Twitter Url"
                />
              </div>
              <div class="form-group">
                <label for="instaurl">Instagram Url:</label>
                <input
                  type="text"
                  class="form-control"
                  id="instaurl"
                  name="ig"
                  placeholder="Instagram Url"
                />
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-lg col-10" type="submit">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
