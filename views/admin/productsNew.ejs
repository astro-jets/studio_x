<!-- Page Content -->
<div id="content-page" class="content-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="iq-card">
          <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
              <h4 class="card-title">Add New Products</h4>
            </div>
          </div>
          <div class="iq-card-body">
            <form
              method="post"
              action="/admin/products/new"
              enctype="multipart/form-data"
            >
              <div class="row">
                <div class="col-4">
                  <div class="form-group">
                    <label for="fname">Product Picture</label>
                    <input class="filepond" type="file" name="picture" />
                  </div>
                </div>
                <div class="col-8">
                  <div class="form-group mx-1 col-12">
                    <label for="fname">Product Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="fname"
                      name="name"
                      placeholder="Song title"
                    />
                  </div>
                  <div class="form-group mx-1 col-12">
                    <label for="fname">Product Price</label>
                    <input
                      type="text"
                      class="form-control"
                      id="fname"
                      name="price"
                      placeholder="ft Zeze"
                    />
                  </div>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group">
                  <label for="fname">Product Description</label>
                  <textarea
                    name="description"
                    id="lyrics"
                    cols="30"
                    rows="6"
                    class="form-control p-0"
                    placeholder="Song Lyrics"
                  ></textarea>
                </div>
                <div class="form-group mt-5">
                  <button class="btn btn-primary btn-lg col-12" type="submit">
                    Save
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
